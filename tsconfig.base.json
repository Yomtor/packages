{
  "exclude": [
    "node_modules",
    "lib",
    "esm",
    "cjs",
    "scripts",
    "jest-config.js",
    "configuration/storybook/main.js",
    "lib/**/*",
    "esm/**/*",
    "cjs/**/*",
    "scripts/**/*"
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": "."
  }
}
