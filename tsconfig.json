{
  "extends": "./tsconfig.base.json",
  "include": [
    "./packages/yomtor-*/src",
    "./types",
    "./docs/src",
    "./scripts",
    "./configuration",
    "./configuration/types",
    "./tests"
  ],
  "exclude": [
    "public",
    ".cache",
    "configuration/jest",
    "configuration/storybook/main.js",
    "node_modules",
    "packages/yomtor-paper/",
    "packages/yomtor-*/scripts/**/*",
    "packages/yomtor-*/esm/**/*",
    "packages/yomtor-*/lib/**/*",
    "packages/yomtor-*/cjs/**/*"
  ],
  "compilerOptions": {
    "paths": {
      "@yomtor/*": ["packages/yomtor-*/src"]
    }
  }
}
