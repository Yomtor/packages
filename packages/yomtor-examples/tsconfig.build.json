{
  "extends": "../tsconfig.base.json",
  "include": ["./src", "./types", "../configuration/types"],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "**/*.story.tsx",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/styles.api.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "lib",
    "composite": true,
    "paths": {
      "@yomtor/styles": ["../packages/yomtor-styles/src"]
    }
  },
  "references": [{ "path": "../packages/yomtor-styles" }]
}
