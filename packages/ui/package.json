{
    "name": "@yomtor/ui",
    "version": "1.0.0",
    "description": "Made with create-react-library",
    "author": "Yomyer",
    "license": "MIT",
    "repository": "https://github.com/Yomyer/yomtor.git",
    "main": "dist/index.js",
    "module": "dist/index.modern.js",
    "source": "src/index.ts",
    "scripts": {
        "build": "microbundle --css-modules false --no-compress --format modern,cjs",
        "start": "microbundle watch --css-modules false --no-compress --format modern",
        "prepare": "run-s build",
        "test": "run-s test:unit test:lint test:build",
        "test:build": "run-s build",
        "test:lint": "eslint ./src/**/*.{ts,tsx}",
        "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
        "test:watch": "react-scripts test --env=jsdom",
        "predeploy": "cd example && npm install && npm run build",
        "deploy": "gh-pages -d example/build",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "generate": "node ./scripts/generate.js"
    },
    "peerDependencies": {
        "react": "^17.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@storybook/addon-actions": "^6.4.9",
        "@storybook/addon-essentials": "^6.4.9",
        "@storybook/addon-links": "^6.4.9",
        "@storybook/addons": "^6.4.9",
        "@storybook/react": "^6.4.9",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "@types/jest": "^25.1.4",
        "@types/lodash": "^4.14.168",
        "@types/node": "^12.12.38",
        "@types/react": "^16.9.27",
        "@types/react-dom": "^16.9.7",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "babel-eslint": "^10.0.3",
        "babel-loader": "^8.2.3",
        "cross-env": "^7.0.2",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-config-standard-react": "^9.2.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.1",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-standard": "^4.0.1",
        "generate-template-files": "^3.2.0",
        "gh-pages": "^2.2.0",
        "microbundle": "^0.13.3",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.4",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-scripts": "^4.0.3",
        "storybook-dark-mode": "^1.0.8",
        "typescript": "^3.7.5"
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "@radix-ui/react-scroll-area": "^0.1.4",
        "@yomtor/paper": "link:../paper",
        "@yomtor/styles": "link:../styles",
        "hotkeys-js": "^3.8.5",
        "lodash": "^4.17.21",
        "react-draggable": "^4.4.4",
        "react-dropzone": "^12.0.4",
        "react-ink": "^6.4.0"
    }
}
